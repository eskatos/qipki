<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.codeartisans</groupId>
        <artifactId>codeartisans-parent</artifactId>
        <version>5</version>
    </parent>

    <groupId>org.codeartisans.qipki</groupId>
    <artifactId>qipki</artifactId>
    <version>1.0-alpha7-SNAPSHOT</version>

    <name>${project.artifactId}</name>
    <packaging>pom</packaging>
    <url>https://github.com/eskatos/qipki</url>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <developers>
        <developer>
            <id>paul@nosphere.org</id>
            <name>Paul Merlin</name>
            <email>paul@nosphere.org</email>
        </developer>
    </developers>

    <scm>
        <url>scm:git:git@github.com:eskatos/qipki.git</url>
        <connection>scm:git:git@github.com:eskatos/qipki.git</connection>
        <developerConnection>scm:git:git@github.com:eskatos/qipki.git</developerConnection>
    </scm>

    <properties>
        <version.qi4j>1.2</version.qi4j>
        <version.restlet>2.0.6</version.restlet>
        <!--version.restlet>2.0-RC1</version.restlet-->
        <version.bouncy>1.45</version.bouncy>
        <version.slf4j>1.6.1</version.slf4j>
        <version.logback>0.9.25</version.logback>
        <version.httpclient>4.0.3</version.httpclient>
        <version.java-toolbox>1.4</version.java-toolbox>
        <version.junit>4.7</version.junit>
    </properties>

    <modules>

        <!-- Common building blocks -->
        <module>crypto</module>
        <module>core</module>
        <module>commons</module>

        <!-- Testing support -->
        <module>testsupport</module>

        <!-- Domain -->
        <module>ca</module>
        <!--module>ra</module-->

        <!-- HTTP Presentation -->
        <module>http</module>

        <!-- Clients -->
        <module>clients</module>

        <!-- OSGI Experiment -->
        <!--module>osgi</module-->

    </modules>

    <build>

        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>2.6</version>
                </plugin>
            </plugins>
        </pluginManagement>

    </build>

    <repositories>

        <!-- Qi4j -->
        <repository>
            <id>ops4j-repository</id>
            <url>http://repository.ops4j.org/maven2</url>
        </repository>

        <!-- Restlet -->
        <repository>
            <id>maven-restlet</id>
            <name>Public online Restlet repository</name>
            <url>http://maven.restlet.org</url>
        </repository>

    </repositories>

</project>
