<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    
    <ui:style>
        .qipki-RibbonView {
            width: 100%;
            height: 23px;
            font-size: 11px;
            line-height: 23px;
            text-align: right;
            background-color: #ffa;
        }
        .qipki-RibbonViewContent {
            margin-right: 11px;
        }
    </ui:style>
    
    <g:FlowPanel addStyleNames="{style.qipki-RibbonView}">
        <g:Label text="Ribbon" addStyleNames="{style.qipki-RibbonViewContent}" />
    </g:FlowPanel>
    
</ui:UiBinder>