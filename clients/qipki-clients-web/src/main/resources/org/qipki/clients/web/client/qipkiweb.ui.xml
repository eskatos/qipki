<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:q='urn:import:org.qipki.clients.web.client.widgets'>
    <g:DockLayoutPanel unit='PX'>
        <g:north size='24'>
            <g:SimplePanel ui:field='ribbonPanel'/>
        </g:north>
        <g:north size='42'>
            <g:SimplePanel ui:field='menuPanel'/>  
        </g:north>
        <g:south size='24'>
            <g:SimplePanel ui:field='footerPanel'/>  
        </g:south>
        <g:center>
            <q:CustomSplitLayoutPanel ui:field='splittedLayout'>
                <q:west size='192'>
                    <g:SimplePanel ui:field='leftSidebarPanel'/>  
                </q:west>
                <q:east size='192'>
                    <g:SimplePanel ui:field='rightSidebarPanel'/>  
                </q:east>
                <q:north size='128'>
                    <g:SimplePanel ui:field='topSidebarPanel'/>  
                </q:north>
                <q:south size='128'>
                    <g:SimplePanel ui:field='bottomSidebarPanel'/>  
                </q:south>
                <q:center>
                    <g:SimplePanel ui:field='mainPanel'/>  
                </q:center>
            </q:CustomSplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>